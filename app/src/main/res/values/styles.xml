<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="windowActionBar">false</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">#000</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/background</item>
    </style>

    <style name="CustomTextAppearance" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TabLayout" parent="android:Widget">
        <item name="tabIndicatorColor">@color/primary_800</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="fontFamily">@font/open_sans</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/CustomTextAppearance</item>
        <item name="tabSelectedTextColor">@color/primary_800</item>
    </style>

    <style name="AppTheme.Widget" />

    <style name="AppTheme.Widget.Button">
        <item name="android:minHeight">40dp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ButtonStyle" parent="AppTheme.Widget.Button">
        <item name="android:gravity">center</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="ButtonGreen" parent="ButtonStyle">
        <item name="android:background">@drawable/button_green</item>
    </style>


    <style name="ButtonGreenOutline" parent="ButtonStyle">
        <item name="android:background">@drawable/button_green_outline</item>
        <item name="android:textColor">@color/primary_800</item>
    </style>
</resources>
